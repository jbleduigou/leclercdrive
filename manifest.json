{
  "manifest_version": 2,

  "name": "Leclerc Drive outil de tri",
  "description": "Leclerc Drive outil de tri",
  "version": "1.0",
  "icons": {
    "128" : "sorting.png"
  },
  "browser_action": {
    "default_icon": "sorting.png"
  }, 
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://*.leclercdrive.fr/*","https://*.leclercdrive.fr/*"],      
      "js": ["jquery.js", "drive.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
